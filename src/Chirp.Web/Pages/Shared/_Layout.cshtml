@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>

<body>
    <div class=page>
        <h1><img src="/images/icon1.png" alt="Icon1" />Chirp!</h1>
        <div class=navigation>
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <div>
                    <a href="/@(User.Identity.Name)">my timeline</a> |
                    <a href="/">public timeline</a> |
                    <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">logout
                        [@(User.Identity.Name)]</a>
                </div>
            }
            else
            {
                <div>
                    <a href="/">public timeline</a> |
                    <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="Register">register</a> |
                    <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">login</a>
                </div>
            }
        </div>

        <div class="cheepbox">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <h3>What's on your mind @(User.Identity.Name)?</h3>
            }
            else
            {
                <h3>What's on your mind John Doe?</h3>
            }
            <form method="post">
                <input style="float: left" type="text" asp-for="Text">
                <input type="submit" value="Share">
            </form>
        </div>


        <div class=body>
            @RenderBody()
        </div>
        <div class=footer>
            Chirp &mdash; An ASP.NET Application
        </div>
    </div>

</body>

</html>