@page "/"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

@{
    var followButtonText = "Follow";
}

@functions {
    void changeFollowButtonText(string followButtonText)
    {
        if (followButtonText == "Follow")
        {
            followButtonText = "Unfollow";
        }
        else
        {
            followButtonText = "Follow";
        }
    }
}

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="cheepbox">
        <h3>What's on your mind @(User.Identity.Name)?</h3>
        <form method="post" asp-action="OnPost">
            <input style="float: left" type="text" asp-for="Text">
            <input type="submit" value="Share">
        </form>
    </div>
}

<div>
    <h2> Public Timeline </h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (CheepDTO cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            //mangler at checke for om user allerede følger cheep.author

                        <form asp-page-handler="Follow" method="post">
                            <button id="followButton" type="submit" onClick=changeFollowButtonText2()>@followButtonText</button>
                            <script>
                                function changeFollowButtonText2() {
                                    <button id="followButton" type="submit">Unfollow</button>
                                }
                            </script>
                        </form>
                        }

                    <br>
                        @cheep.Text
                    <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
<div style="text-align:center;">
    @if (Model.CurrentPage > 1)
    {
        <a href="/?page=1">[&lt;&lt;]</a>
        <a href="/?page=@(Model.CurrentPage - 1)">[&lt;]</a>
    }

    @for (int i = int.Max(1, Model.CurrentPage - 5); i <= int.Min(Model.PageCount, Model.CurrentPage + 5); i++)
    {
        if (i == Model.CurrentPage)
        {
            <b>[@i]</b>
            continue;
        }

        <a href="/?page=@i">[@i]</a>
    }

    @if (Model.CurrentPage < Model.PageCount)
    {
        <a href="/?page=@(Model.CurrentPage + 1)">[&gt;]</a>
        <a href="/?page=@Model.PageCount">[&gt;&gt;]</a>
    }
</div>
